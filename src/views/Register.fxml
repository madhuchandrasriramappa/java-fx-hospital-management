<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.CheckBox?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" 
xmlns="http://javafx.com/javafx/16" 
xmlns:fx="http://javafx.com/fxml/1"
fx:controller="controller.register">
      <children>
      		<Label layoutX="40.0" layoutY="50.0" text="First Name" />
	      <TextField fx:id="firstNameField" layoutX="100.0" layoutY="50.0" prefHeight="25.0" prefWidth="150.0" />
	      
	      <Label layoutX="40.0" layoutY="100.0" text="Last Name" />
	      <TextField fx:id="lastNameField" layoutX="100.0" layoutY="100.0" prefHeight="25.0" prefWidth="150.0" />
	      
	      <Label layoutX="40.0" layoutY="150.0" text="Email ID" />
	      <TextField fx:id="emailField" layoutX="100.0" layoutY="150.0" prefHeight="25.0" prefWidth="150.0" />
	      
	      <Label layoutX="40.0" layoutY="200.0" text="Password" />
	      <PasswordField fx:id="passwordField" layoutX="100.0" layoutY="200.0" prefHeight="25.0" prefWidth="150.0" />
	      
	       <Label layoutX="40.0" layoutY="250.0" text="Ph No" />
	      	<TextField  fx:id="phoneNoField" layoutX="100.0" layoutY="250.0" prefHeight="25.0" prefWidth="150.0" />
	      
	       <CheckBox fx:id="isDoctorField" text="Are you a Doctor?" layoutX="100.0" layoutY="300.0"/>
	      
        	<!-- Your login screen components -->
   			<Button text="Login" onAction="#handleRegisterButtonAction"  AnchorPane.topAnchor="350.0" layoutX="100.0"/>
   			
   			<!-- Your login screen components -->
   			<Button text="Register" onAction="#handleRegisterButtonAction"  AnchorPane.topAnchor="350.0" layoutX="200.0" />
      </children>
  
</AnchorPane>
